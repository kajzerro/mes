
_renderMarginPeriods() {
    return html`
        <div class="row margin-periods-section">
            <!-- Okres 1 -->
            <div class="col-12">
                <div class="row">
                    <div class="col-4 form-label">
                        <p><strong>${this.localize('ProductParameters.marginPeriod1') || 'Okres 1'}</strong></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 form-label">
                        <p>${this.localize('ProductParameters.marginPeriodFrom') || 'Od'}</p>
                    </div>
                    <div class="col-3">
                        <cms2-product-date-picker
                            at-id="marginPeriod1From"
                            .modelValue="${this.modelValue.marginPeriod1From}"
                            modelKey="marginPeriod1From"
                            @model-value-changed=${this.updateValue}
                            .disabled=${true}
                            placeholder="${this.localize('ProductParameters.datePlaceholder')}"
                        ></cms2-product-date-picker>
                    </div>
                    <div class="col-1 form-label">
                        <p>${this.localize('ProductParameters.marginPeriodTo') || 'Do'}</p>
                    </div>
                    <div class="col-3">
                        <cms2-product-date-picker
                            at-id="marginPeriod1To"
                            .modelValue="${this.modelValue.marginPeriod1To}"
                            modelKey="marginPeriod1To"
                            @model-value-changed=${this.updateValue}
                            .disabled=${this.isDisabled({ sectionName: 'priceTermsSection', propName: 'marginPeriod1To' })}
                            placeholder="${this.localize('ProductParameters.datePlaceholder')}"
                        ></cms2-product-date-picker>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 form-label">
